<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
</head>
<body>
	<!-- navigation bar -->
	<div class="navbar navbar-fixed-top navbar-custom" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toogle Navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="#" class="navbar-brand">Mini Blogging</a>
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
                      <li><%= link_to "Home", root_path%></li>
                    <% if !current_user %>
	  				  <li><%= link_to "Sign in", sign_in_path %></li>
	  				  <li><%= link_to "sign up", sign_up_path %></li>
				 	<% else %>
	  				  <li><%= link_to "Hello #{current_user.username}" %></li>
	  				  <li><%= link_to "Logout", session_path(current_user), method: "DELETE"%></li>
					<% end %>

			</ul>
		</div>
	</div>
</div>
	<!-- flash message -->
<% flash.each do |type, msg| %><br>
  <div class="alert <%= flash_class type %> alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p><%= msg %></p>
  </div>
<% end %>
<%= yield %>

</body>
</html>
